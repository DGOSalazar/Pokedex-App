<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/purple_700"
    android:padding="@dimen/min_margin">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/main_mcv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="@dimen/min_margin"
        android:layout_margin="10dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_list_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="PikaPika"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_list_id"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="@dimen/text_size1"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tv_list_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="002"
            app:layout_constraintStart_toEndOf="@id/tv_list_name"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="@dimen/text_size1"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tv_list_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="www.google.com/cisit_me"
            app:layout_constraintTop_toBottomOf="@id/tv_list_name"
            android:gravity="center"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>